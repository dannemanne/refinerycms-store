<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(order_item) -%>">
  <span class='title'>
    <%= order_item.product_number %>

  </span>
  <span class='actions'>

    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_store_admin_order_item_path(order_item),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.store_admin_order_item_path(order_item),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => order_item.product_number),
        :method => :delete %>
  </span>
</li>
