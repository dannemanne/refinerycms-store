<ul>
  <% if ::Refinery::Store::Admin::RetailersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.store_admin_retailers_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_store_admin_retailer_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Store::Admin::RetailersController.sortable? && ::Refinery::Store::Retailer.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Retailers"),
                 refinery.store_admin_retailers_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Retailers"),
                 refinery.store_admin_retailers_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
