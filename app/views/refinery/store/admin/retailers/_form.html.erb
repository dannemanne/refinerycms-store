<%= form_for [refinery, :store_admin, @retailer] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @retailer,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :default_price_unit -%>
    <%= f.text_field :default_price_unit, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.store.admin.retailers.retailer'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @retailer.name) -%>
<% end -%>
